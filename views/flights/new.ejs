<%- include('../partials/header') %>

    <main>

    <form id="formNew" action ="/flights" method="POST">
        <h2> Add a new Flight </h2>
        <label>Airline
            <select name="airline">
                <option value="Southwest"> Southwest</option>
                <option value="Delta"> Delta</option>
                <option value="United"> United</option>
                <option value="American"> American</option>
            </select>
        </label><br><br>
        <label>Airport
            <select name="airport">
                <option value="AUS"> ATL</option>
                <option value="DFW"> DFW</option>
                <option value="DFW"> DEN</option>
                <option value="LAX"> LAX</option>
                <option value="SAN"> SAN</option>
            </select>
        </label><br><br>
        <label>Flight No.
            <input type="text" name="flightNo">
        </label><br><br>
        <label>Departure Date:
            <input type="datetime-local" name="departs">
        </label><br><br>
        <input id="buttonAdd" type="submit" value="Add Flight">
    </form>
</main>
    
<%- include('../partials/footer') %>